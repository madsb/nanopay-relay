{
  "name": "nanopay-relay",
  "version": "0.0.0",
  "private": true,
  "packageManager": "pnpm@9.15.0",
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "scripts": {
    "compose:up": "docker compose up -d postgres",
    "compose:down": "docker compose down",
    "migrate": "node scripts/migrate.mjs",
    "dev": "pnpm --filter @nanopay/relay dev",
    "worker": "pnpm --filter @nanopay/seller-worker dev",
    "smoke": "tsx scripts/smoke.ts",
    "berrypay:e2e": "tsx scripts/berrypay-e2e.ts",
    "test": "pnpm --filter @nanopay/relay test",
    "gate:1": "node scripts/gate1.mjs",
    "gate:2": "node scripts/gate2.mjs",
    "gate:3": "node scripts/gate3.mjs",
    "gate:4": "node scripts/gate4.mjs"
  },
  "devDependencies": {
    "@nanopay/shared": "workspace:*",
    "@types/node": "^20.11.30",
    "tsx": "^4.19.2",
    "typescript": "^5.5.4",
    "undici": "^6.17.0"
  },
  "dependencies": {
    "berrypay": "^0.2.0",
    "qrcode": "^1.5.4"
  }
}
